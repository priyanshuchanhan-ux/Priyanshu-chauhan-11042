#include <stdio.h>

int main() {
    int n;
    int attendance[50];
    int present = 0, absent = 0;

    printf("Enter number of students: ");
    scanf("%d", &n);

    for(int i = 0; i < n; i++) {
        printf("Enter attendance of student %d (1 = Present, 0 = Absent): ", i + 1);
        scanf("%d", &attendance[i]);
    }

    printf("\nAttendance Record:\n");
    for(int i = 0; i < n; i++) {
        if(attendance[i] == 1)
            printf("Student %d: Present\n", i + 1);
        else
            printf("Student %d: Absent\n", i + 1);
    }
    for(int i = 0; i < n; i++) {
        if(attendance[i] == 1)
            present++;
        else
            absent++;
    }
    printf("\nTotal Present Students: %d", present);
    printf("\nTotal Absent Students: %d", absent);

    return 0;
}